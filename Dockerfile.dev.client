# Development Dockerfile for Frontend Client
# This container runs the Vite dev server with hot-reload support

FROM node:20-alpine

# Install development tools
RUN apk add --no-cache \
    bash

# Set working directory
WORKDIR /app

# Accept GitHub token as build argument
ARG GITHUB_TOKEN
ENV GITHUB_TOKEN=$GITHUB_TOKEN

# Create a temp directory for npm install
WORKDIR /tmp/npm-install

# Copy package files and .npmrc for installation
COPY client/package*.json client/.npmrc ./

# Install dependencies including devDependencies
RUN npm ci

# Remove .npmrc after installation for security
RUN rm -f .npmrc

# Move node_modules to /app and go back to /app
RUN mv node_modules /app/node_modules
WORKDIR /app

# The actual source code will be mounted as a volume
# This allows for hot-reload during development

# Expose the frontend dev server port
EXPOSE 3002

# Default command (can be overridden by docker-compose)
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
