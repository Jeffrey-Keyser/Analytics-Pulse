# Docker Development Environment Configuration
# Copy this file to .env.docker and update with your values if needed
# These variables can be used to override docker-compose.dev.yml defaults

# REQUIRED: GitHub Token for private npm packages
# Get your token from: https://github.com/settings/tokens
# Needs: read:packages scope
GITHUB_TOKEN=your_github_token_here

# PostgreSQL Database Configuration
POSTGRES_DB=template_dev
POSTGRES_USER=template_user
POSTGRES_PASSWORD=template_password
POSTGRES_PORT=5432

# Backend Server Configuration
BACKEND_PORT=3001
NODE_ENV=development

# Session and JWT Secrets (change these for security)
SESSION_SECRET=dev-session-secret-at-least-32-characters-long
JWT_SECRET=dev-jwt-secret-at-least-32-characters-long

# Frontend Configuration
FRONTEND_PORT=3002

# External Services
PAY_SERVICE_URL=https://pay.jeffreykeyser.net

# Optional: Override default container names
# POSTGRES_CONTAINER_NAME=serverless-template-postgres-dev
# BACKEND_CONTAINER_NAME=serverless-template-backend-dev
# FRONTEND_CONTAINER_NAME=serverless-template-frontend-dev
